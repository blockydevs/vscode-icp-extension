{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "build",
        "lib": [
			"es6",
			"dom"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true
	},
	"include": [
		"client",
        "server"
	],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}